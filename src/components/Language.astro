<div class="language-buttons">
    <button id="spanish" class="language-btn" aria-label="Cambiar idioma">
        <span data-i18n="es.button"></span>
    </button>
    <button id="english" class="language-btn" aria-label="Cambiar idioma">
        <span data-i18n="en.button"></span>
    </button>
</div>

<style>
    .language-buttons {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        overflow: hidden;
        background-color: #fff;
        border: 5px solid #007BFF;
    }
  .language-btn {
    display: flex;
    align-items: center;
    padding: 10px 15px;
    background: transparent;
    border: none;
    overflow: hidden;
    color: #000;
    font-size: 15px;
    cursor: pointer;
    font-weight: bold;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    position: relative;
    z-index: 0;
  }
  .language-btn::before {
    content: '';
    width: 150%;
    height: 0;
    background-color: #007BFF;
    position: absolute;
    right: -10px;
    bottom: -10px;
    transition: all .25s ease;
    z-index: -1;
  }
  .active {
    color: #fff;
  }

  .active::before {
    height: 150%;
  }

  @media screen and (max-width: 950px) {
    .language-buttons {
        margin-right: 15px;
    }
    
    .language-btn {
        padding: 8px 12px;
    }
    
  }

</style>

<script>

  function getCurrentLanguage(): Language {
    return (localStorage.getItem('language') as Language) || 'es';
  }

  function setSpanish() {
    const currentLang = getCurrentLanguage();
    if (currentLang === 'es') {
        return;
    };

    document.getElementById('spanish')?.classList.add('active');
    document.getElementById('english')?.classList.remove('active');

    const newLang = 'es';

    localStorage.setItem('language', newLang);
    applyTranslations(newLang);

    window.dispatchEvent(new CustomEvent('languageChanged', { 
      detail: { language: newLang } 
    }));
  }

  function setEnglish() {
    const currentLang = getCurrentLanguage();
    if (currentLang === 'en') {
        return;
    };
    document.getElementById('spanish')?.classList.remove('active');
    document.getElementById('english')?.classList.add('active');
    
    const newLang = 'en';

    localStorage.setItem('language', newLang);
    applyTranslations(newLang);

    window.dispatchEvent(new CustomEvent('languageChanged', { 
      detail: { language: newLang } 
