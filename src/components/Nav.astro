---
import Language from "./Language.astro"
---

<nav>
    <h1>
        Cristian Arévalo {"< />"}
    </h1>
    <div class="items">
        <ul>
            <li><a data-i18n="nav.home" href="/#home"></a></li>
            <li><a data-i18n="nav.about" href="/#about"></a></li>
            <li><a data-i18n="nav.projects" href="/#projects"></a></li>
            <li><a data-i18n="nav.contact" href="/#contact"></a></li>
            <li><Language /></li>
        </ul>
    </div>
    <h1 class="dropdown-title">
        Cristian Arévalo {"< />"}
    </h1>
    <button class="dropdown" id="dropdown">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-category" viewBox="3 3 18 18"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M10 3h-6a1 1 0 0 0 -1 1v6a1 1 0 0 0 1 1h6a1 1 0 0 0 1 -1v-6a1 1 0 0 0 -1 -1z"></path><path d="M20 3h-6a1 1 0 0 0 -1 1v6a1 1 0 0 0 1 1h6a1 1 0 0 0 1 -1v-6a1 1 0 0 0 -1 -1z"></path><path d="M10 13h-6a1 1 0 0 0 -1 1v6a1 1 0 0 0 1 1h6a1 1 0 0 0 1 -1v-6a1 1 0 0 0 -1 -1z"></path><path d="M17 13a4 4 0 1 1 -3.995 4.2l-.005 -.2l.005 -.2a4 4 0 0 1 3.995 -3.8z"></path></svg>
    </button>
</nav>

<style>
    nav {
        display: flex;
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        flex-direction: row;
        width: 100%;
        background-color: #ffffff;
        justify-content: space-between;
        align-items: center;
        z-index: 100;
        transition: width 0.3s ease-in-out, 
            top 0.3s ease-in-out,
            background-color 0.3s ease-in-out,
            border-radius 0.3s ease-in-out;
    }
    nav::before {
        content: "";
        position: absolute;
        inset: 0;
        padding: 0px;
        border-radius: 0px;
        background: linear-gradient(45deg,rgba(255, 56, 212, 0.48) 0%, rgba(0, 123, 255, 0.52) 100%);
        -webkit-mask: 
          linear-gradient(#fff 0 0) content-box, 
          linear-gradient(#fff 0 0);
        opacity: 0;
        mask-composite: exclude;
        pointer-events: none;
        z-index: -1;
        transition: all 0.3s ease-in-out;
    }
    nav h1 {
        font-family: 'Poppins', sans-serif;
        color: #000000;
        margin-left: 50px;
        font-size: 22px;
    }
    nav .dropdown {
        display: none;
        background-color: transparent;
        border: none;
        cursor: pointer;
    }
    nav .dropdown-title {
        display: none;
        font-family: 'Poppins', sans-serif;
        color: #000000;
        margin-left: 50px;
        font-size: 22px;
    }
    .items {
        display: flex;
        flex-direction: row;
        justify-content: end;
        align-items: center;
        margin-right: 50px;
    }
    .items ul {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        list-style: none;
        width: 100%;
        transition: all 0.3s ease-in-out;
    }
    .items ul li {
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease-in-out;
    }
    .items ul li a {
        text-decoration: none;
        font-family: 'Poppins', sans-serif;
        color: #000000;
        margin-left: 15px;
        font-size: 18px;
        position: relative;
        padding: 5px 5px;
        transition: all 0.3s ease;
    }
    .items ul li a::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 0;
        border-radius: 3px;
        z-index: -1;
        bottom: 0;
        left: 0;
        background-color: #007BFF;
        transition: height 0.2s ease-in-out;
    }
    .items ul li a:hover::before {
        height: 100%;
    }
    .items ul li a:hover {
        color: #ffffff;
    }

    .items ul li:nth-child(4) {
        margin-right: 20px;
    }
    nav.island {
        position: fixed;
        top: 15px;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        border-radius: 40px;
        z-index: 100;
        
        background-color: rgba(105, 105, 105, 0.562);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: width 0.3s ease-in-out, 
            top 0.3s ease-in-out,
            background-color 0.3s ease-in-out,
            border-radius 0.3s ease-in-out;
    }
    nav.island h1 {
        color: #ffffff;
    }
    nav.island .items ul li a {
        color: #ffffff;
    }
    nav.island::before {
        content: "";
        position: absolute;
        inset: 0;
        padding: 5px;
        border-radius: 40px;
        background: linear-gradient(45deg,rgba(255, 56, 212, 0.48) 0%, rgba(0, 123, 255, 0.52) 100%);
        -webkit-mask: 
          linear-gradient(#fff 0 0) content-box, 
          linear-gradient(#fff 0 0);
        opacity: 1;
        mask-composite: exclude;
        pointer-events: none;
        z-index: -1;
        transition: all 0.3s ease-in-out;
    }
    nav.island .items ul {
        padding-left: 10px;
    }
    nav.island .items ul li:nth-child(4) {
        margin-right: 5px;
    }
    @media screen and (max-width: 1050px) {
        nav h1 {
            margin-left: 10px;
            padding-left: 15px;
            font-size: 20px;
        }
        .items {
            margin-right: 10px;
        }
        .items ul {
            padding: 0;
        }
        .items ul li a {
            font-size: 14px;
            margin-left: 10px;
        }
        
        .items ul li:nth-child(4) {
            margin-right: 5px;
        }
        
    }

    @media screen and (max-width: 850px) {
        nav, nav.island {
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 70px;
            transition: all 0.3s ease-in-out;
            overflow: hidden;
        }
        nav h1 {
            margin: 20px 0;
            font-size: 18px;
        }
        nav .dropdown {
            display: flex;
            position: absolute;
            background-color: #007BFF;
            z-index: 101;
            top: 10px;
            right: 10px;
            border-radius: 50%;
            padding: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease-in-out;
        }
        nav .dropdown svg {
            width: 20px;
            height: 20px;
            color: #ffffff;
            transition: all 0.3s ease-in-out;
        }
        nav .dropdown:hover {
            background-color: #005ec2;
        }
        nav .dropdown-title {
            display: block;
            position: absolute;
            z-index: 101;
            margin-left: 0;
            padding: 0 15px;
            font-size: 18px;
            transition: all 0.35s ease-in-out;
        }
        
        .items {
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
            transition: opacity 0.3s ease-in-out;

        }
        .items ul {
            flex-direction: column;
            align-items: center;
        }
        .items ul li a {
            margin: 10px 0;
        }
        .items ul li:nth-child(4) {
            margin-right: 0;
        }
        .nav-enabled, .nav-enabled.island {
            height: 50%;
        }
        .nav-enabled.island {
            border-radius: 35px;
        }
        .nav-enabled::before, .nav-enabled.island::before {
            border-radius: 35px;
        }
        .enabled, .enabled.island {
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
        }
        .dropdown.enabled {
            background-color: #005ec2;
        }
        .dropdown.enabled svg {
            transform: rotate(-90deg);
        }
        .dropdown-title-enabled {
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
        }

    }

    @media screen and (max-height: 750px) {
        .nav-enabled, .nav-enabled.island {
            height: 90%;
        }
    }

</style>

<script>
    document.addEventListener('DOMContentLoaded', () => { 
        const nav = document.querySelector('nav');
        const dropdown = document.getElementById('dropdown');
        const dropdownTitle = document.querySelector('.dropdown-title');

        if (!nav || !dropdown || !dropdownTitle) return;

        dropdown.addEventListener('click', () => {
            const items = document.querySelector('.items');
            if (items) {
                items.classList.toggle('enabled');
                dropdown.classList.toggle('enabled');
                nav.classList.toggle('nav-enabled');
                dropdownTitle.classList.toggle('dropdown-title-enabled');
            }
        });

        const navOffset = nav.offsetTop;

        function handleScroll() {
            if ((window.scrollY - 50) > navOffset) {
                nav?.classList.add('island');
            } else {
                nav?.classList.remove('island');
            }
        }

        window.addEventListener('scroll', handleScroll);
        handleScroll();
    });
</script>